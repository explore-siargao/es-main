{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env.*local"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "build/**",
        "dist/**"
      ],
      "env": [
        "AWS_ACCESS_KEY",
        "AWS_SECRET_ACCESS_KEY",
        "AWS_REGION",
        "API_URL",
        "API_PORT",
        "PASSWORD_ENCRYPT_KEY",
        "ALLOWED_CLIENTS",
        "API_AUTH_URL",
        "API_MOCK_URL",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_SECRET_ID",
        "FACEBOOK_CLIENT_ID",
        "FACEBOOK_SECRET_ID",
        "WEB_URL",
        "RECAPTCHA_KEY",
        "RECAPTCHA_KEY_SECRET",
        "NODE_ENV",
        "XENDIT_URL",
        "XENDIT_SECRET",
        "CARD_ENCRYPT_KEY",
        "CSRF_SIGN_KEY",
        "GOOGLE_APIS_URL",
        "REDIS_URL",
        "REDIS_PASSWORD",
        "WINDY_KEY",
        "PAYLOAD_URL"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "start": {
      "cache": false,
      "persistent": true
    }
  }
}
